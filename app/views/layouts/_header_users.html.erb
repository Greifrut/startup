<div class="body">
    <div id="page-top">

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
            <div class="navbar-brand">
            <% if action_name == "users#show" %>
                <%= render 'shared/show_user' %>
            <% else %>
                <%= render 'shared/unless_show' %>
            <% end %>
                        <% if @user == current_user %>
                            <%= link_to 'New post', new_post_path, class: "btn btn-primary btn-lg" %>
                        <% end %>
                    </div>
                </span>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <%= link_to "Users", users_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Friend", friendship_path(current_user), class: "nav-link"%>
                        <span class="numAdd" data-behavior="numAdd"></span>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Edit profile", edit_user_path(current_user), class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <div class="btn-group dropright">
                            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Notification
                            </button>
                            <div class="dropdown-menu" >
                                <div data-behavior="notifications">
                                    <ul data-behavior='notification-items'></ul>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Exit", sign_out_path, method: :delete, class: "nav-link" %>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container-fluid p-0">
        <%= yield %>
        </div>

    </div>
</div>