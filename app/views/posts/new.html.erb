<div class="container">
  <div class="row">
    <%= form_for @post, :html => {class: "post-form"} do |f|%>
      <h2>New Post</h2>
      <div class="col-lg-3 col-sm6">
        <div class="post-group">
          <%= f.text_field :title, placeholder: 'Title', class: 'post-control' %>
        </div>
      </div>

      <div class="col-lg-3 col-sm6">
        <div class="post-group">
          <%= f.text_area :subtitle, placeholder: 'Subtitle', class: 'post-control subtitle' %>
        </div>
      </div>

      <div class="col-lg-12 col-sm-12">
        <div class="post-group">
          <%= f.trix_editor :body, placeholder:'Enter your text...', class: 'post-control trix' %>
        </div>
      </div>

      <%= f.submit "Create", class: 'btn btn-primary btn-xl' %>
    <% end %>
  </div>
</div>