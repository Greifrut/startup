<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="post_img">
          <img src="https://www.energeticthemes.com/templates/umda/images/b3.jpg" alt="Card image cap">
        </div>
      </div>
    </div>
  </div>

  <div class="blog-post">
    <article>

      <div class="container">
        <div class="row">
          <div class="col-md-12 col-sm-12 text-center">
            <%= content_tag(:div, @post.title, class: "post-title")%>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-9 col-sm-12">
            <div class="post-meta-top">
              <span class="post-meta-author">
                <%= link_to @user do %>
                  <%= @user.first_name %> <%= @user.last_name %>
                <% end %>
              </span>
              <span class="post-meta-date">
                <%= @post.created_at.strftime("%B %d, %Y") %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-9 col-sm-12">
            <div class="body-container">
              <%= content_tag(:div, @post.body.html_safe, class: "post-body") %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
</div>