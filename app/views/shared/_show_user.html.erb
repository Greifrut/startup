<span class="d-block d-lg-none"><%= @user.first_name %> <%= @user.last_name %></span>
<span class="d-none d-lg-block">
   
     <% unless @user.avatar? %>
      <% if @user == current_user %>
        <%= form_for @user, url: user_path(@user), html: { multipart: true }, method: :put do |f| %>
          <%= f.file_field :avatar %>
          <%= f.submit "Save" %>
        <% end %>
      <% end %>
    <% else %>
      <%= link_to current_user do%>
        <%= image_tag(@user.avatar_url, class: 'img-fluid img-profile rounded-circle mx-auto mb-2' )%>
      <% end %>
    <% end %>
  
<div class="user-info">
  <span><%= @user.first_name %> <%= @user.last_name %></span>
  <h6 class="email"><%= @user.email %></h6>