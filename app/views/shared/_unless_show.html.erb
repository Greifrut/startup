<span class="d-block d-lg-none"><%= current_user.first_name %> <%= current_user.last_name %></span>
<span class="d-none d-lg-block">
  <% unless current_user.avatar? %> 
    <%= form_for current_user, url: user_path(current_user), html: { multipart: true }, method: :put do |f| %>
      <%= f.file_field :avatar %>
      <%= f.submit "Save" %>
    <% end %>
  <% else %>
    <%= link_to current_user do %>
      <%= image_tag(current_user.avatar_url, class: 'img-fluid img-profile rounded-circle mx-auto mb-2' )%>
    <% end %>
  <% end %>
<div class="user-info">
  <span><%= current_user.first_name %> <%= current_user.last_name %></span>
  <h6 class="email"><%= current_user.email %></h6>