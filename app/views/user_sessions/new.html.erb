<div class="container lg w-4/5 p-center">
    <div class="flex flex-row justify-center w-full">
      <%= form_for @user_session, :html => {class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"} do |f| %>
      <div class="mb-4">
            <%= f.label :email, class: "block text-gray text-sm font-bold mb-2"%>
            <%= f.email_field :email, class: "shadow apperance-none border rounded w-64 py-2 px-3 text-gray" %>
      </div>

      <div class="mb-4">
            <%= f.label :password, class: "block text-gray text-sm font-bold mb-2" %>
            <%= f.password_field :password, class: "shadow apperance-none border rounded w-64 py-2 px-3 text-gray" %>
      </div>
            
      <%= f.label :remember_me%>
      <%= f.check_box :remember_me %>
        
      <%= f.submit 'Sing in', class: 'bg-blue hover:bg-blue-dark text-white font-bold py-2 px-4 rounded'%>
      <% end %>
    </div>
</div>
